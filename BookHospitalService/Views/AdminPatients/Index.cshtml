@model IEnumerable<BookHospitalService.Models.PatientModel>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: antiquewhite;
    }
</style>

<div>
    <h2>Index</h2>
    
    <div class="form-horizontal">
        <form action="/AdminPatients/Index" method="post">
            <div class="form-group">
                <div class="control-label col-md-2">
                    Procedure
                </div>
                <div class="col-md-10">
                    <select class="form-control" id="select-patient-procedure" name="procedure">
                        <option value="0" class="form-control">Select Procedure</option>
                        @foreach (var procedure in @ViewBag.Procedures)
                        {
                            if (@ViewBag.SelectedProcedure == procedure.Id)
                            {
                                <option value="@procedure.Id" selected="selected" class="form-control">@procedure.Name</option>
                            }
                            else
                            {
                                <option value="@procedure.Id" class="form-control">@procedure.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    Doctor
                </div>
                <div class="col-md-10">
                    <select class="form-control" id="select-patient-doctor" name="doctor">
                        <option value="0" class="form-control">Select Doctor</option>
                        @foreach (var doctor in @ViewBag.Doctors)
                        {
                            if (@ViewBag.SelectedDoctor == doctor.Id)
                            {
                                <option value="@doctor.Id" selected="selected" class="form-control">@doctor.Category</option>
                            }
                            else
                            {
                                <option value="@doctor.Id" class="form-control">@doctor.Category</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    Date
                </div>
                <div class="col-md-10">
                    <input type="date" name="Date" value="@ViewBag.SelectedDate" class="form-control"/>
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Filter" class="btn btn-info" />
                </div>
            </div>
        </form>
    </div>

    <table class="table admin-show-patients">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notices)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notices)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
        }

    </table>

</div>